
<div class="card">
   <div class="card-content">
      <div class="row center">
         {{ form_start(form, {'attr' : {'id' : 'payment-form'}}) }}
       
    
         <div class="input-field col s12 l8">
            {% if not inputValue %}
                {{ form_label(form.amount)}}
                {{ form_widget(form.amount)}}
                <div class='error'>{{ form_errors(form.amount) }}</div>
            {% else %}
               {{ form_label(form.amount)}}
               {{ form_widget(form.amount, {'attr': {'value': inputValue}})}}
               <div class='error'>{{ form_errors(form.amount)}}</div>
            {% endif %}
          

         </div>
         <div class="input-field col s6 ">
            {{ form_label(form.participantId.name)}}
            {{ form_widget(form.participantId.name)}}
            <div class='error'>{{ form_errors(form.participantId.name)}}</div>
         </div>
                  <div class="input-field col s6 ">
            {{ form_label(form.participantId.email)}}
            {{ form_widget(form.participantId.email)}}
            <div class='error'>{{ form_errors(form.participantId.email)}}</div>
         </div>
         <p>
            <label>
               {{ form_widget(form.participantId.isAnonymous)}}
               <span>Masquer le montant de ma participation aupr√®s des autres participants</span>
            </label>
         </p>
         <div class="input-field col s12 ">
         <h4 class="card-title teal-text center">VIA STRIPE</h4>
         <div id="card-element"></div>
         </div>
              <div class="input-field col s12">
               <h4 class="card-title teal-text center">VIA Paypal</h4>
                 <div id="paypal-button-container"></div>
            </div>
            <a href="{{ path('campagne_show', {'id': campagne.id}) }}" class="btn btn-large waves-effect waves-light grey col s12 l5" style="margin-top: 20px;">Annuler</a>
            <div class='col s12 l2'></div>            
            <button  class="btn btn-large waves-effect waves-light blue-grey lighten-1 col s12 l5" style="margin-top: 20px;" type="submit" name="action">{{ button_label|default('Validez votre participation') }}</button>
         {{ form_end(form) }}
      </div>
   </div>
</div>
  